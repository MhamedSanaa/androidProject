<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="24sp"
                android:text="Subject"
                android:textStyle="bold" />
<!--            <TextView-->
<!--                android:id="@+id/user"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAppearance="?attr/textAppearanceTitleMedium"-->
<!--                android:textSize="24sp"-->
<!--                android:text="subject"-->
<!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="user"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/post_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:text="Date"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                 />

            <TextView
                android:id="@+id/post_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:text="Time"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/post_card_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:text="Location"
                android:drawableLeft="@drawable/location_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/post_card_participation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:text="1"
                android:drawableLeft="@drawable/person_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <Button
                    android:id="@+id/post_card_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#7073EE"


                    />
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/post_card_modify"
                    android:layout_height="wrap_content"
                    android:text="Modify"
                    android:backgroundTint="#FABA26"
                    android:layout_marginRight="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:backgroundTint="#EF2346"
                    />
            </LinearLayout>

        </LinearLayout>

